@model Book
@{

    ViewBag.Title = "Details of Book";
}
<h1>Details of Book</h1>
<div class="row">
    <div class="col-md-5">


        @if (Model != null)
        {
            <table class="table table-bordered table-hover">
                <tr>
                    <td>Book Name</td>
                    <td>@Model.BookName</td>

                </tr>
                <tr>
                    <td>Author Name</td>
                    <td>@Model.Author</td>

                </tr>
                <tr>
                    <td>ISBN</td>
                    <td>@Model.ISBN</td>

                </tr>
                <tr>
                    s
                    <td>Published Date</td>
                    <td>
                        @Model.PublishedDate
                    </td>
                </tr>

            </table>
        }
        else
        {
            <h2>
                No Books Available
            </h2>
        }
    </div>
</div>


