@model IEnumerable<Book>
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Books";
}

<h1>List of Books</h1>

@if (Model.Count() == 0)
{
    <h3>No Books</h3>
}
else
{
    <ul>
        @foreach(var book in Model)
        {
            <li class="list-group-item">
                <a asp-action="Details" asp-route-id="@book.Id" asp-controller="Books" >@book.BookName</a>
            </li>
        }
    </ul>
}